/* pages/watermerFile/watermerFile.wxss */
.paintWatermaerView{
  width: 100%;
  height: 100%;
  background-color: #F1F2F7;
  /* 设置多个元素垂直居中：下面三行代码 */
  display: flex;
  flex-direction: column;
  align-items: center
}

.bannerImage{
  padding-top: 0px;
  width: 100%;
 
}

.contentView{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.tipText{
  text-align: center;
  width: 100%;
  padding: 10px;
  font-size: 20px;
  color: #3052E6;
  font-family: "微软雅黑"
}


 .customCanvas{
  padding-bottom: 58px;
 }

.clearButton{
  position:absolute;
  text-align: center;
  height: 32px;

  width: 60px;
  font-size: 15px;
  right: 10px;
  top: 3px;
  background-color: #E1E5F0;
  border-radius:0px;
  color: #3052E6;



}
.clearButton::after{
  border-radius:0px;
  border: none; 
}
.uploadWaterMark {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 58px;
  border-radius:0px;
  padding-bottom: 10px;
}
